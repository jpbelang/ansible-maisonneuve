;
; BIND data file for local loopback interface
;
$TTL    86400
@       IN      SOA     ns.mondomaine.interne. root.mondomaine.interne. (
                     2021022201         ; Serial
                         604800         ; Refresh
                          86400         ; Retry
                        2419200         ; Expire
                         604800 )       ; Negative Cache TTL
;
@       IN      NS      ns.mondomaine.interne.
ns      IN      A       192.168.86.37

;also list other computers
box     IN      A       192.168.86.44
